# Airtable Configuration
AIRTABLE_PAT=your_airtable_personal_access_token_here

# Mercado Pago Configuration
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here

# Application URLs
FRONTEND_URL=http://localhost:80
BACKEND_URL=http://localhost:10000

# CORS Configuration (Optional - if not set, allows all origins)
# For production, set specific origins separated by commas
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL="your_email@domain.com"

# Admin Credentials
ADMIN_PASSWORD="your_secure_admin_password_here"

# Payway Configuration (Optional - if not set, defaults will be used)
# PAYWAY_SITE_ID=your_payway_site_id
# PAYWAY_PUBLIC_KEY=your_payway_public_key
# PAYWAY_PRIVATE_KEY=your_payway_private_key
# PAYWAY_TEMPLATE_ID=your_payway_template_id
